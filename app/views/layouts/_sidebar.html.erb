<div class="left-sidebar panel-group welly" id="accordion">
  <% all_themes.each do |theme| %>
    <div class="panel panel-default">
      <div class="panel-heading welly">
        <h4 class="panel-title" >
          <a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= theme.id %>" aria-expanded="true">
            <%= theme.name %>
          </a>
        </h4>
      </div>
      <div id="collapse<%= theme.id %>" class="panel-collapse collapse">
      <div class="panel-body">
        <ul>
          <% theme.categories.each do |category| %>
            <li><%= link_to category.name, category %></li>
          <% end %>
        </ul>
      </div>
      </div>
    </div>
  <% end %>  
</div>

