<div id="companies">
  <% random_companies.each do |company| %>    
      <div class="col-md-4">
        <%= image_tag('main/' + company.img, class: "img-thumbnail") %>
        <div class="thumbnail welly">          
          <div class="caption">
            <div class="header"><%= link_to company.name, company %></div><hr>
            <p><%= truncate(company.describe, length: 100, separator: ' ', escape: false) %></p><hr>
            <div class="details">
              <%= link_to "Детальніше", company %>
            </div>
          </div>
        </div>        
      </div>    
  <% end %>
</div>
