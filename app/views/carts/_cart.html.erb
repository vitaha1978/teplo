<div id="cart">
  <h1 class="brand">Ваша корзина:</h1>
  <table class="table">
    
    <tbody> 
    <%= render(cart.line_items) %>
    
    <tr class="total brand">
        <td colspan="2"><%= button_to 'Очистити корзину', cart, method: :delete,
               data: { confirm: 'Ви впевнені?' }, class: "btn btn-warning btn-xs" %></td>
        <td>Всього:</td>
        <td><%= sprintf("%0.02f", @cart.total_price) %></td>
      </tr>
    </tbody>
  </table>

  

</div>