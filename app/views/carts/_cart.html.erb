
  <h1 class="brand">Ваша корзина:</h1>
  <table class="table">
    
    <tbody> 
    <%= render(cart.line_items) %>      
    
    <tr>
      <td  colspan="4" class="total brand text-right">Всього: <%= sprintf("%0.02f", @cart.total_price) %></td>
    </tr>
    <tr class="total">
      <td colspan="2" class="text-left"><%= link_to 'Очистити корзину', cart, method: :delete,
               data: { confirm: 'Ви впевнені?' }, remote: true %></td>
      <td colspan="2" class="text-right"><%= button_to 'Оформити замовлення', new_order_path, method: :get, class: "btn btn-info btn-xs" %></td>
      
    </tr>
        
        
      
    </tbody>
  </table>

  

