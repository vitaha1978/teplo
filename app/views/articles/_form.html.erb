<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div id="article">
  <div class="field">
    <%= f.label :img, "Картинка" %><br>
    <%= f.text_field :img, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :title, "Назва" %><br>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :content, "Контент" %><br>
    <%= f.text_area :content, class: "form-control", rows: 8 %>
  </div>
  <div class="field">
    <%= f.label :url, "URL" %><br>
    <%= f.text_field :url, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :category_id, "Категорія" %><br>
    <%= f.collection_select(:category_id, Category.all, :id, :name, {prompt: "Виберіть категорію"}, {class: "form-control"}) %>
  </div>
  <div class="field">
    <%= f.label :company_id, "Компанія" %><br>
    <%= f.collection_select(:company_id, Company.all, :id, :name, {prompt: "Виберіть торгову марку"}, {class: "form-control"}) %>
  </div>
  <div class="field">
    <%= f.label :user_id, "Автор" %><br>
    <%= f.collection_select(:user_id, User.all, :id, :name, {prompt: "Виберіть автора"}, {class: "form-control"}) %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Зберегти", class: "btn btn-sm btn-primary" %>
  </div>
</div>
<% end %>
