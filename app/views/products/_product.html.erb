
<div id="product" class="panel panel-default">
  <div class="panel-heading"><%= link_to product.title, product %>
      <span class="pull-right">
      </span>
    </div>
    <div class="panel-body">
      <% if product.img %>
        <%= image_tag('products/' + product.img, :class => "img-thumbnail") %>
      <% end %>
      <div>
        <%= product.description.html_safe %>
      </div>
      <div class="details">
        
        <%= button_to 'Додати до корзини', line_items_path(product_id: product),
                    class: "btn btn-primary btn-xs pull-right" %>
      </div>
      <div class="price_line">
        <span class="brand">
          Ціна: <%= sprintf("%0.02f", product.price) %> грн.
        </span>    
      </div>
      
    </div>    
  </div>