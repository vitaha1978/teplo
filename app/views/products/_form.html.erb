<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :img, "Картинка" %><br>
    <%= f.text_field :img, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :title,"Назва" %><br>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :description, "Опис" %><br>
    <%= f.text_area :description, rows: 6, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :price, "Ціна" %><br>
    <%= f.text_field :price, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :category_id, "Виберіть категорію" %><br>
    <%= f.collection_select(:category_id, Category.all, :id, :name, {prompt: "Виберіть категорію"}, {class: "form-control"}) %>
  </div>
  <div class="field">
    <%= f.label :company_id, "Компанія" %><br>
    <%= f.collection_select(:company_id, Company.all, :id, :name, {prompt: "Виберіть торгову марку"}, {class: "form-control"}) %>
  </div><br>
  <div class="actions">
    <%= f.submit "Зберегти", class: "btn btn-sm btn-primary" %>
  </div>
<% end %>
