<h3 class="brand">Перелік розділів:</h3>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Назва</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @themes.each do |theme| %>
      <tr>
        <td><%= theme.name %></td>
        <td><%= link_to 'Переглянути', theme %></td>
        <td><%= link_to 'Редагувати', edit_theme_path(theme) %></td>
        <td><%= link_to 'Видалити', theme, method: :delete, data: { confirm: 'Ви впевнені?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Нова тема', new_theme_path %>
