<h3 class="brand">Перелік категорій:</h3>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Назва</th>
      <th>Розділ</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to 'Перглянути', category %></td>
        <td><%= link_to 'Редагувати', edit_category_path(category) %></td>
        <td><%= link_to 'Видалити', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

