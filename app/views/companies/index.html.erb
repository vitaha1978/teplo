<h1>Listing companies</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Назва</th>
      <th>Логотип</th>
      <th>Назва</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= image_tag('main/' + company.img) %></td>
        <td><%= link_to 'Переглянути', company %></td>
        <td><%= link_to 'Редагувати', edit_company_path(company) %></td>
        <td><%= link_to 'Видалити', company, method: :delete, data: { confirm: 'Ви впевнені?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

